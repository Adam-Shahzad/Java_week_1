package paint;

import java.util.Scanner;

public class Main{

public static void  main(String[] args) {
	
	Paint[] p = new Paint[4];	
	p[1] = new Paint();
	p[2] = new Paint();
	p[3] = new Paint();
	
	System.out.print("How Big is the room");
	Scanner sc = new Scanner(System.in);
	int search = sc.nextInt();
	
	p[1].price = 19.99;
	p[1].volume = 20;
	p[1].effectivness = 10; 
	

	p[2].price = 17.99;
	p[2].volume = 15;
	p[2].effectivness = 11; 
	

	p[3].price = 25.00;
	p[3].volume = 10;
	p[3].effectivness = 20; 
	
	int counter = 1;
	while (counter <=3)
	{
		double answer =  (p[counter].volume * p[counter].effectivness);
		answer = search/answer;
		System.out.println("£"+ Math.ceil (answer) * p[counter].price);
		counter = counter + 1;
		
		//counter = 1;
		//while (counter <=3)
		//{
		//	double answer = (p[counter].volume * p[counter].effectivness)/search;
		//	System.out.println(Math.round(answer));
		//	counter = counter + 1;
	//}
}
}
}
